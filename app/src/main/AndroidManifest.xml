<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/baseline_tsunami_24"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.D308MobileApplication"
        tools:targetApi="31">
        <receiver
            android:name=".UI.MyReceiver"
            android:exported="true"
            android:enabled="true"></receiver>
        <activity
            android:name=".UI.ExcursionDetails"
            android:exported="false"
            android:label="Excursion Details"
            android:windowSoftInputMode="adjustNothing"
            android:parentActivityName=".UI.VacationDetails" />
        <activity
            android:name=".UI.VacationDetails"
            android:exported="false"
            android:label="Details and Excursion List"
            android:windowSoftInputMode="adjustNothing"
            android:parentActivityName=".UI.VacationList" />

        <meta-data
            android:name="android.app.lib_name"
            android:value="" />

        <activity
            android:name=".UI.VacationList"
            android:exported="false"
            android:label="Vacation List"
            android:parentActivityName=".UI.MainActivity" />

        <meta-data
            android:name="android.app.lib_name"
            android:value="" />

        <activity
            android:name=".UI.MainActivity"
            android:exported="true"
            android:label="Vacation Planner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>